<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Custodya.HomePage"
             Title="HomePage">
    <VerticalStackLayout Margin="10">
        <HorizontalStackLayout Margin="0,0,0,20">
            <Label Text="custodya" FontAttributes="Bold" FontSize="Large" VerticalOptions="Center" HorizontalOptions="StartAndExpand"/>
            <ImageButton  Source="user.png" HeightRequest="40" Margin="230,0,0,0"/>
        </HorizontalStackLayout>
        <Label Text="Pod Status"/>
        <ListView MinimumHeightRequest="100">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout>
                        <Image Background="lime"/>
                        <Label/>
                    </HorizontalStackLayout>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Label Text="Notifications"/>
        <ListView MinimumHeightRequest="100">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout>
                        <Image Background="lime"/>
                        <Label/>
                    </HorizontalStackLayout>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>